LOG_LEVEL="DEBUG"
APP_NAME="srvc-io"

# Kafka Configuration
KAFKA_TOPIC="parking-events"
KAFKA_BOOTSTRAP_SERVERS="localhost:9092"

# Event Generation
EVENTS_PER_SECOND=1

# Parking Configuration
PARKING_LOTS="lot-01,lot-02,lot-03"
PARKING_SLOTS="10-50,0-100,0-150"
HANDICAP_SLOTS="10-12|40-50,3,1"

# Vehicle Configuration
VEHICLE_COLORS="red,blue,black,white,gray,silver,green,yellow,orange,purple"
VEHICLE_TYPES="car,truck,motorcycle,van,suv"

# Parking Duration in MS
MIN_PARKING_DURATION=5000
MAX_PARKING_DURATION=20000

# Resilience Configuration  
RESILIENCE_MAX_RETRIES=3
RESILIENCE_BACKOFF_MS=1000

# Monitoring
PROMETHEUS_ENDPOINT=localhost:9100
